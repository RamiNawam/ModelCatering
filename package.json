{
    "name": "dunya-catering-website",
    "version": "1.0.0",
    "description": "DUNYA Catering Website with Stripe Payment Integration - Full Stack Application",
    "main": "server/payment-handler.js",
    "scripts": {
        "start": "npm run build && npm run serve",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "nodemon server/payment-handler.js",
        "dev:client": "live-server public --port=3001 --open=/",
        "build": "npm run build:clean && npm run build:copy && npm run build:optimize && npm run build:update-refs",
        "build:clean": "rimraf dist",
        "build:copy": "mkdir -p dist && cp -r public/* dist/",
        "build:optimize": "npm run minify:css && npm run minify:js && npm run minify:html",
        "minify:css": "cleancss -o dist/styles.min.css dist/styles.css",
        "minify:js": "terser dist/script.js -o dist/script.min.js --compress --mangle",
        "minify:html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true -o dist/index.html dist/index.html",
        "build:update-refs": "node scripts/update-references.js",
        "serve": "concurrently \"node server/payment-handler.js\" \"serve -s dist -l 3000\"",
        "test": "jest",
        "lint": "eslint public/script.js server/payment-handler.js",
        "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
        "validate": "npm run lint && npm run test",
        "install:all": "npm install",
        "setup": "npm run install:all && npm run build",
        "production": "NODE_ENV=production npm run build && NODE_ENV=production npm start"
    },
    "keywords": [
        "catering",
        "restaurant",
        "booking",
        "payment",
        "stripe",
        "nodejs",
        "express",
        "fullstack",
        "webapp"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "stripe": "^14.9.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "concurrently": "^8.2.2",
        "live-server": "^1.2.2",
        "serve": "^14.2.1",
        "rimraf": "^5.0.5",
        "clean-css-cli": "^5.6.2",
        "terser": "^5.24.0",
        "eslint": "^8.56.0",
        "prettier": "^3.1.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "html-minifier": "^4.0.0"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/dunya-catering-website.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/dunya-catering-website/issues"
    },
    "homepage": "https://github.com/yourusername/dunya-catering-website#readme"
}
